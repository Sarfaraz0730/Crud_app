<!--include Header -->
<%- include('include/_header')%>
<!-- / include Header -->

  <div class="site-main">
      <div class="container">
        <div class="box-nav d-flex-justify-between">
          <div class="filter">
            <a href="/"> <i class="fa fa-angle-double-left"></i> All Users </a>
          </div>
        </div>
        <div class="form-title text-center">
          <h2 class="text-dark">New User</h2>
          <span class="text-light">
            Use the Below Form to create New Account</span
          >
        </div>
        <!-- Form -->
        <form method="POST" id="update_user">
          <div class="new_user">
            <div class="form-group">
              <label for="name" class="text-light">Name</label>
              <input type="hidden" name="id" value="" />
              <input
                type="text"
                name="name"
                value=""
                id=""
                placeholder="Mark Stonis"
              />
            </div>

            <div class="form-group">
              <label for="email" class="text-light">Email</label>
              <input
                type="text"
                name="email"
                value=""
                id=""
                placeholder="example@gmail.com"
              />
            </div>

            <div class="form-group">
              <label for="gender" class="text-light">Gender</label>
              <div class="radio inline">
                <input type="radio" name="gender" value="Male" id="radio-2" />
                <label for="radio-2" class="text-light">Male</label>
              </div>

              <div class="radio inline">
                <input type="radio" name="gender" value="Female" id="radio-3" />
                <label for="radio-3" class="text-light">Female</label>
              </div>
            </div>

            <div class="form-group">
              <label for="Status" class="text-light">Status</label>
              <div class="radio inline">
                <input type="radio" name="Status" value="Active" id="radio-4" />
                <label for="radio-4" class="text-light">Active</label>
              </div>

              <div class="radio inline">
                <input
                  type="radio"
                  name="gender"
                  value="Inactive"
                  id="radio-5"
                />
                <label for="radio-5" class="text-light">Inctive</label>
              </div>
            </div>
            <div class="form-group">
              <button type="submit" class="btn text-dark update">Save</button>
            </div>
          </div>
        </form>

        <!-- /Form -->
      </div>
    </div>
    <!-- /Main site -->

<!--include Footer -->
<%- include('include/_footer')%>
<!-- / include Footer -->